@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<section class="employee-edit">
    <div>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <h2>Account Details</h2>
            <div class="form-group row">
                <label asp-for="Input.Email" class="col-sm-3"></label>
                <input asp-for="Input.Email" class="form-control col-sm-8" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.Password" class="col-sm-3"></label>
                <input asp-for="Input.Password" class="form-control col-sm-8" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.ConfirmPassword" class="col-sm-3"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control col-sm-8" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <h2>Personal Information</h2>

            <div class="form-group row">
                <label asp-for="Input.FirstName" class="col-sm-3"></label>
                <input asp-for="Input.FirstName" class="form-control col-sm-8" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="Input.LastName" class="col-sm-3"></label>
                <input asp-for="Input.LastName" class="form-control col-sm-8" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="Input.BirthDate" class="col-sm-3"></label>
                <input asp-for="Input.BirthDate" class="form-control col-sm-8" />
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.Gender" class="col-sm-3"></label>
                <select asp-for="Input.Gender" class="custom-select col-sm-8">
                    <option value="">Choose Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.Height" class="col-sm-3"></label>
                <input asp-for="Input.Height" class="form-control col-sm-8" />
                <span asp-validation-for="Input.Height" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.Weight" class="col-sm-3"></label>
                <input asp-for="Input.Weight" class="form-control col-sm-8" />
                <span asp-validation-for="Input.Weight" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.City" class="col-sm-3"></label>
                <input asp-for="Input.City" class="form-control col-sm-8" />
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.Street" class="col-sm-3"></label>
                <input asp-for="Input.Street" class="form-control col-sm-8" />
                <span asp-validation-for="Input.Street" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.Zip" class="col-sm-3"></label>
                <input asp-for="Input.Zip" class="form-control col-sm-8" />
                <span asp-validation-for="Input.Zip" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.PhoneNumber" class="col-sm-3"></label>
                <input asp-for="Input.PhoneNumber" class="form-control col-sm-8" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
