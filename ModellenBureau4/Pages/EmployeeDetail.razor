@page "/employeedetail/{Id}"

<h1 class="page-title">Details for @Employee.FirstName @Employee.LastName</h1>

<div class="col-12 row">
    <div class="col-2">

    </div>
    <div class="col-10 row">
        <div class="col-xs-12 col-sm-8">

            <h2>Personal</h2>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Employee ID</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Employee.Id</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">First Name</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Employee.FirstName</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Last Name</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Employee.LastName</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Birthdate</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Employee.BirthDate</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Gender</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Employee.Gender</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Height</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Employee.Height</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Weight</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Employee.Weight</label>
                </div>
            </div>

            <h2>Adrress</h2>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">City</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Employee.City</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Street</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Employee.Street</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Zipcode</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Employee.Zip</label>
                </div>
            </div>

            <h2>Contact</h2>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">PhoneNumber</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Employee.PhoneNumber</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Employee.Email</label>
                </div>
            </div>
            <a class="btn btn-outline-primary" @onclick="@NavigateToOverView">Back to overview</a>
            <p></p>
        </div>
    </div>
</div>

