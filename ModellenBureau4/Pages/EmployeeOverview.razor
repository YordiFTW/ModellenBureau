@page "/employeeoverview"

<h1 class="page-title">All Employees</h1>

<a class="btn btn-outline-primary" @onclick="@NavigateToOverView">Add Employee</a>
<p></p>

@if (Employees == null)
{
    <p><em>Loading...</em></p>
}
else
{

    <table class="table">

        <tr>
            <th></th>
            <th>Employee Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th></th>
        </tr>


        @foreach (var employee in Employees)
        {
    <tr>
        <td><img src="@employee.PhotoPath" width="50" height="50" /></td>
        <td>@employee.Id</td>
        <td>@employee.FirstName</td>
        <td>@employee.LastName</td>
        <td>
            <a href="@($"employeedetail/{employee.Id}")" class="btn btn-primary table-btn">
                Detail
            </a>
            <a href="@($"employeeedit/{employee.Id}")" class="btn btn-primary table-btn">
                Edit
            </a>
        </td>
    </tr>
        }

    </table>
}